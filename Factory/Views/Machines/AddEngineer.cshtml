@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add a licensed Engineer for @Html.DisplayFor(model => model.MachineName)</h1>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <p>
    @Html.Label("Add Licensed Engineer")
    @Html.DropDownList("EngineerId")
  </p>
  <p>
    <input type="submit" value="Save" class="btn btn-dark" />
  </p>
}
  <p>@Html.ActionLink("Back to machine details", "Details", new { id = Model.MachineId })</p>
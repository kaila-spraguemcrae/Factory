@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add a new Machine:</h1>
<hr />

@using (Html.BeginForm())
{
  <p>
    @Html.Label("Name:")
    @Html.TextBoxFor(model => model.MachineName)
  </p>
  <p>
    @Html.Label("Licensed Engineer")
    @Html.DropDownList("EngineerId")
  </p>
  <p>
    <input type="submit" value="Add new machine" class="btn btn-dark" />
  </p>
}